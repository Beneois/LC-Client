@page "/"
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation
@using Models
@inject UserSession Session

<div style="max-width: 400px; margin: auto; padding-top: 50px; font-family: sans-serif;">
    <div class="card shadow-sm p-4 border rounded">
        <h3 class="text-center mb-4">@(isRegisterMode ? "Create Account" : "Login")</h3>

        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" @bind="userName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" @bind="password" />
        </div>

        @if (isRegisterMode)
        {
            <div class="mb-3">
                <label class="form-label">Registration Code</label>
                <input type="text" class="form-control" @bind="inviteCode" />
            </div>
            <button class="btn btn-primary w-100" @onclick="HandleRegister">Register</button>
            <div class="mt-3 text-center"><a href="javascript:void(0)" @onclick="ToggleMode">Back to Login</a></div>
        }
        else
        {
            <button class="btn btn-success w-100" @onclick="HandleLogin">Sign In</button>
            <div class="mt-3 text-center"><a href="javascript:void(0)" @onclick="ToggleMode">Create an account</a></div>
        }

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert alert-info mt-3 small">@message</div>
        }
    </div>
</div>

@code {
    private bool isRegisterMode = false;
    private string userName = "";
    private string password = "";
    private string inviteCode = "";
    private string message = "";

    private void ToggleMode() { isRegisterMode = !isRegisterMode; message = ""; }

    private async Task HandleRegister()
    {
        message = "Registering...";
        var request = new { Username = userName, Password = password, InviteCode = inviteCode };
        var response = await Http.PostAsJsonAsync("api/identity/register", request);

        if (response.IsSuccessStatusCode)
        {
            message = "Success! You can now login.";
            isRegisterMode = false;
        }
        else { message = await response.Content.ReadAsStringAsync(); }
    }

    private async Task HandleLogin()
    {
        var request = new { Username = userName, Password = password };
        var response = await Http.PostAsJsonAsync("api/identity/login", request);

        if (response.IsSuccessStatusCode)
        {
            // 1. Capture the User data (Id, Name, etc.) from the API
            var user = await response.Content.ReadFromJsonAsync<UserResponse>();

            if (user != null)
            {
                // 2. Save it into your Session service
                Session.UserId = user.Id;
                Session.UserName = user.Name;

                // 3. Redirect to the home page
                Navigation.NavigateTo("/home");
            }
        }
        else
        {
            message = "Invalid credentials.";
        }
    }

    // This class matches the object your API's Login method returns
    public class UserResponse
    {
        public int Id { get; set; }
        public string Name { get; set; }
    }
}
}